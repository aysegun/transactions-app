<h3>Find me on app/views/cases/show.html.erb</h3>

<div class="mt-5">
  <p style="font-weight: bold">Collections</p>


  <%= select_tag "selected_collection", options_from_collection_for_select(@collections, 'id', 'description'), prompt: 'Select a collection',  data: { controller: 'collection', action: 'change->collection#updateTable' } %>

  <div class="collection-table mt-3">
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Amount <i class="fa-solid fa-turkish-lira-sign fa-xs"></th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% @collections.each do |collection| %>
          <tr>
            <td><%= collection.date.strftime('%b %d, %Y') if collection.date %></td>
            <td><%= collection.amount %></td>
            <td><%= collection.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<p><%= link_to "Create Collection", new_client_case_collection_path(case_id: @case.id)  %></p>
<p><%= link_to "Back to Client", client_path(@case.client) %></p>


<p>Collection Calculation for <% @collections.each do |collection| %>
  <%= collection.case.court %><%= collection.case.court_number %>.
Date: <%= collection.date.strftime('%b %d, %Y') if collection.date  %><% end %></p>
<div data-controller="collection">
  <table>
    <thead>
      <tr>
        <th>Transaction Party</th>
        <th>Notes</th>
        <th>Ratio</th>
        <th>Amount</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @collections.each do |collection| %>
        <tr>
          <td>
            <%= select_tag "transaction_party_#{collection.id}", options_for_select(['Lawyer', 'Client','Enforcement Office']), prompt: 'Select transaction party' %>
          </td>
          <td>
            <%= text_area_tag "notes_#{collection.id}", nil, placeholder: 'Enter notes here' %>
          </td>
          <td>
            <%= select_tag "ratio_#{collection.id}", options_for_select(['9,1%', '4,55%', '2,7%', 'none']), prompt: 'Select Ratio', data: { action: 'change->collection#calculateAmount', collection_target: "ratio" } %>
          </td>
          <td>
            <%= text_field_tag "amount_#{collection.id}", collection.calculation_amount('none'), readonly: true, data: { collection_target: "amount" } %>
          </td>
          <td>
            <%= date_field_tag "date_#{collection.id}", nil, placeholder: 'Select Date' %>
          </td>
        </tr>
        <tr>
          <td>
            <%= select_tag "transaction_party_#{collection.id}", options_for_select(['Lawyer', 'Client','Enforcement Office']), prompt: 'Select transaction party' %>
          </td>
          <td>
            <%= text_area_tag "notes_#{collection.id}", nil, placeholder: 'Enter notes here' %>
          </td>
          <td>
            <%= select_tag "ratio_#{collection.id}", options_for_select(['9,1%', '4,55%', '2,7%', 'none']), prompt: 'Select Ratio' %>
          </td>
          <td>
            <%= text_field_tag "amount_#{collection.id}", collection.calculation_amount('none'), readonly: true %>
          </td>
          <td>
            <%= date_field_tag "date_#{collection.id}", nil, placeholder: 'Select Date' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
