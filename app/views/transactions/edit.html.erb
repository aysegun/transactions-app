<div class="wrapper-transaction-edit">
  <div class="wrapper">
    <div class="header-transaction">
      <h3>Edit Transaction </h3>
    </div>
    <div class="form-transaction">
    <%= form_with(model: [@client, @transaction], url: client_transaction_path, method: :patch, local: true) do |form| %>
      <div class="field mt-3">
        <%= form.label :amount %>
        <%= form.text_field :amount %>
      </div>

      <div class="field mt-3">
        <%= form.label :transaction_type %>
        <%= form.select :transaction_type, Transaction.transaction_types.keys, prompt: "Select Transaction Type" %>
      </div>

      <div class="field mt-3">
        <%= form.label :description %>
        <%= form.text_area :description %>
      </div>

      <div class="field mt-3">
        <%= form.label :date %>
        <%= form.date_field :date %>
      </div>

      <div class="submit-button mt-3">
        <%= form.submit 'Submit' %>
      </div>
    <% end %>
  </div>
</div>
